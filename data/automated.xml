<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Al crear un presupuesto, se actualiza el estado del CRM a Propuesta -->
    <record id="sale_order_on_create" model="base.automation">
        <field name="name">Pedido Creado</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="state">code</field>
        <field name="code">
proposition_stage_id = env['crm.stage'].search([('id', '=', 3)]).id
record.opportunity_id.write({'stage_id': proposition_stage_id})
        </field>
        <field name="trigger">on_create</field>
        <field name="active">1</field>
    </record>

    <!-- Al confirmar un presupuesto, se actualiza el estado del CRM a Ganado -->
    <record id="sale_order_on_write_confirmed" model="base.automation">
        <field name="name">Pedido Confirmado</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="state">code</field>
        <field name="code">
proposition_stage_id = env['crm.stage'].search([('id', '=', 4)]).id
record.opportunity_id.write({'stage_id': proposition_stage_id})
        </field>
        <field name="trigger_field_ids" eval="[(4,ref('sale.field_sale_order__state'))]"></field>
        <field name="trigger">on_write</field>
        <field name="filter_domain">[('state', '=', 'sale')]</field>
        <field name="active">1</field>
    </record>

    <!-- Al cancelar un presupuesto, se actualiza el estado del CRM a Perdido -->
    <record id="sale_order_on_write_canceled" model="base.automation">
        <field name="name">Pedido Cancelado</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="state">code</field>
        <field name="code">
record.opportunity_id.write({'probability': 0, 'active': False })
        </field>
        <field name="trigger_field_ids" eval="[(4,ref('sale.field_sale_order__state'))]"></field>
        <field name="trigger">on_write</field>
        <field name="filter_domain">[('state', '=', 'cancel')]</field>
        <field name="active">1</field>
    </record> 
  
</odoo>